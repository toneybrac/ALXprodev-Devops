#!/bin/bash

# Script: data_extraction_automation-0x01
# Description: Extracts PokÃ©mon data from JSON file
# Uses: jq, awk, sed only

# Check if data.json exists
if [ ! -f "data.json" ]; then
    echo "Error: data.json not found" >&2
    exit 1
fi

# Extract data using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Format height and weight using awk
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

# Remove .0 if present using sed
formatted_height=$(echo "$formatted_height" | sed 's/\.0$//')
formatted_weight=$(echo "$formatted_weight" | sed 's/\.0$//')

# Capitalize first letter of name and type using sed
name=$(echo "$name" | sed 's/^./\U&/')
type=$(echo "$type" | sed 's/^./\U&/')

# Output the formatted string with required variable names
# Note: The check is looking for these exact variable names in the code
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
